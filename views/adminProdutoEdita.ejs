<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="shortcut icon" href="/img/favicon-32x32.png" type="image/x-icon">
  <link rel="stylesheet" href="/stylesheets/crud.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
  <%- include('./partials/style') %>
  <title>Cadastro de Produtos</title>
</head>

<body style=" background-color: aquamarine;">

  <%- include ('./partials/header.ejs') %>

  <div class="page-title">
    <h1>titulo</h1>
  </div>

  <div class="contain">
    <div class="pagination">
      <a>Home > </a>
      <a href="/administrador/lista-de-produtos">Lista de Produtos > </a>
      <p style="margin-top: 15px;">Editando o Produto</p>
    </div>
  </div>

  <div class="align">
    <div class="container-inp">
      <form action="/administrador/editando-produtos/<%= products.IdProduto %>?_method=PUT" method="post"
        enctype="multipart/form-data">

        <div class="mb-3">
          <label for="text" class="form-label">Nome do Produto *</label>
          <input class="form-control" type="text" id="formFile" name="nomeProduto" value="<%= products.NomeProduto %>">
        </div>

        <div class="mb-3">
          <label for="text" class="form-label">Descrição Produto*</label>
          <input class="form-control" type="text" id="formFile" name="descricaoProduto"
            value="<%= products.DescricaoProduto %>">
        </div>

        <div class="mb-3">
          <label for="number" class="form-label">Preço do Produto*</label>
          <input class="form-control" type="number" id="formFile" name="precoProduto"
            value="<%= products.PrecoProduto %>">
        </div>

        <div class="mb-3">
          <label for="file" class="form-label">URL da imagem *</label>
          <input class="form-control" type="file" id="formFile" name="images" value="<%= products.ImagemProduto %>">
        </div>

        <div class="mb-3">
          <label for="number" class="form-label">Quantidades *</label>
          <input class="form-control" type="number" id="formFile" name="quantidadeEstoque"
            value="<%= products.QuantidadeEstoque %>">
        </div>

        <button>Salvar Alterações</button>
      </form>

    </div>

  </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous">
</script>

</html>
